<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Note Taking App</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .container {
        margin-top: 20px;
      }

      h1 {
        display: flex;
        align-items: center;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <%- include("nav.ejs")%>
    <div class="container">
      <h1>Note Taking App</h1>
      <% notes.forEach(note => { %>

      <div class="col">
        <div class="card col">
          <div class="card-body">
            <h2 class="card-atitle"><%= note.title %></h2>
            <a href="/notes/<%= note._id %>" class="btn btn-primary">view</a>
            <a href="/notes/dlt/<%= note._id%>" class="btn btn-primary"
              >delete</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
